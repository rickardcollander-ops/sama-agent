# SAMA 2.0 - Supabase Configuration
# Copy this to .env.local and fill in your values

# ============================================
# REQUIRED - Add these first
# ============================================

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Supabase Database URL (get from Supabase Dashboard → Settings → Database → Connection string → URI)
# Replace [YOUR-PASSWORD] with your actual database password
DATABASE_URL=postgresql://postgres.xxxxx:[YOUR-PASSWORD]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# ============================================
# OPTIONAL - Can add later
# ============================================

# Redis - Use Upstash (free tier) or local Docker
# For Upstash: Get from https://console.upstash.com/
REDIS_URL=redis://localhost:6379/0

# Google APIs (for SEO Agent)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SEO APIs
SEMRUSH_API_KEY=
AHREFS_API_KEY=

# Social Media (for Social Agent)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# Google Ads (for Ads Agent)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
SUCCESSIFIER_DOMAIN=successifier.com

# Auto-publish settings (safety first!)
AUTO_PUBLISH_BLOG_POSTS=false
AUTO_PUBLISH_LANDING_PAGES=false
AUTO_PUBLISH_SOCIAL_POSTS=false
AUTO_RESPOND_REVIEWS_POSITIVE=true
AUTO_RESPOND_REVIEWS_NEGATIVE=false
